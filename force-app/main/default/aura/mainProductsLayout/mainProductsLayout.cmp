<aura:component>
    <div>
        <lightning:layout verticalAlign="stretch" multipleRows="true" class="x-large">
            <lightning:layoutItem size="8" class="custom-box">
                <!-- TOP ROW -->
                <lightning:layout class="slds-page-header slds-page-header_object-home">
                    <!-- LIST OF PRODUCTS -->
                    <lightning:layoutItem>
                        <lightning:icon iconName="standard:product_service_campaign" alternativeText="My Products"/>
                    </lightning:layoutItem>
                    <lightning:layoutItem padding="horizontal-small">
                        <div class="page-section page-header">
                            <h1 class="slds-text-heading_label slds-text-align_left">Products Catalog</h1>
                            <h2 class="slds-text-heading_medium slds-text-align_left">Active Products</h2>
                        </div>
                        <div class="scroll">
                            <c:ListProducts/> 
                        </div>
                    <!-- / LIST OF PRODUCTS -->
                    </lightning:layoutItem>
                </lightning:layout>
            </lightning:layoutItem>
                <!-- / BOTTOM - PRODUCTS IMAGE -->
            <lightning:layoutItem size="4" class="custom-box">
                <c:ProductImage />
            </lightning:layoutItem>
                <!-- / BOTTOM - PRODUCTS IMAGE -->
        </lightning:layout>
    </div>
    <!-- HERE IS THE FORM TO SIGN UP TO THE MAILING LIST -->
    <div class="c-container">
        <lightning:layout horizontalAlign="stretch">
            <lightning:layoutItem flexibility="auto" padding="around-small">
                <lightning:layout class="slds-page-header slds-page-header_object-home">
                    <lightning:layoutItem>
                        <lightning:icon iconName="standard:contact_request" alternativeText="Mailing List"/>
                    </lightning:layoutItem>
                    <lightning:layoutItem padding="horizontal-small">
                        <div class="page-section page-header">
                            <h1 class="slds-text-heading_label">Sign Up to our mailing list!</h1>
                            <h2 >Create an Account to be alerted whenever an unit is announced!</h2>
                        </div>
                    </lightning:layoutItem>
                </lightning:layout>
            </lightning:layoutItem>
        </lightning:layout>
    </div>    
</aura:component>